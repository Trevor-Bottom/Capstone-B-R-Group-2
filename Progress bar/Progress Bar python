

from flask import Flask, jsonify, render_template
import threading
import time

app = Flask(__name__)

# Dummy progress storage
progress = 0

def long_running_task():
    global progress
    for i in range(100):
        time.sleep(0.1)  # Simulate work by sleeping
        progress = i + 1

@app.route('/')
def index():
    return render_template('index.html')

@app.route('/start-task')
def start_task():
    global progress
    progress = 0
    threading.Thread(target=long_running_task).start()
    return jsonify({'message': 'Task started'}), 200

@app.route('/progress')
def task_progress():
    return jsonify({'progress': progress})

if __name__ == '__main__':
    app.run(debug=True)
